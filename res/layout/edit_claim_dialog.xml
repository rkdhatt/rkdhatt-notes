<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditClaimActivity" >

    <TextView
        android:id="@+id/editClaimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/edit_cname_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editClaimName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editClaimTextView"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="New Claim Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editFromDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editClaimName"
        android:ems="10"
        android:hint="New From Date (DD/MM/YYYY)"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editToDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editFromDateText"
        android:ems="10"
        android:hint="New To Date (DD/MMMM/YYYY)"
        android:inputType="date" />

    <EditText
        android:id="@+id/editClaimInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editToDateText"
        android:ems="10"
        android:hint="Edit Description"
        android:inputType="textMultiLine" />

</RelativeLayout>